@model PuffyAmiYumi.Models.Order


@{
    Layout = "_Layout";
}


<div class="container">
    <form class="needs-validation" novalidate>

        <div class="row">
            <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <address>
                            <strong>@Model.FullName</strong>
                            <br>
                            @Model.Street
                            <br>
                            @Model.City @Model.State
                            <br>
                            <abbr title="country">@Model.Country</abbr> @Model.Zip
                        </address>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                        <p>
                            <em>@Model.Date</em>
                        </p>
                        <p>
                            <em>@Model.Email</em>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="text-center">
                        <h1>Your Receipt</h1>
                    </div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OrderItems item in Model.Products)
                            {
                                <tr>
                                    <td class="col-md-9"><em>@item.ItemName</em></td>
                                    <td class="col-md-1" style="text-align: center">@item.Quantity</td>
                                    <td class="col-md-1 text-center">@item.Price</td>
                                    <td class="col-md-1 text-center">@item.TotalCost</td>
                                </tr>
                            }
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right">
                                    <p>
                                        <strong>Subtotal: </strong>
                                    </p>
                                    <p>
                                        <strong>Shipping</strong>
                                    </p>
                                </td>
                                <td class="text-center">
                                    <p>
                                        <strong>$@Model.Total</strong>
                                    </p>
                                    <p>
                                        <strong>$5</strong>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right"><h4><strong>Total: </strong></h4></td>
                                <td class="text-center text-danger"><h4><strong>$@(Model.Total+5)</strong></h4></td>
                            </tr>
                        </tbody>
                    </table>
                    <input type="hidden" asp-for="@Model.UserID" value="@Model.UserID" />
                    <input type="hidden" asp-for="@Model.FullName" value="@Model.FullName" />
                    <input type="hidden" asp-for="@Model.CreditCard" value="@Model.CreditCard" />
                    <input type="hidden" asp-for="@Model.NameOnCard" value="@Model.NameOnCard" />
                    <input type="hidden" asp-for="@Model.Country" value="@Model.Country" />
                    <input type="hidden" asp-for="@Model.Street" value="@Model.Street" />
                    <input type="hidden" asp-for="@Model.PhoneNumber" value="@Model.PhoneNumber" />
                    <input type="hidden" asp-for="@Model.Total" value="@Model.Total" />
                    <input type="hidden" asp-for="@Model.Zip" value="@Model.Zip" />
                    <input type="hidden" asp-for="@Model.Business" value="@Model.Business" />
                    <input type="hidden" asp-for="@Model.Email" value="@Model.Email" />
                    <input type="hidden" asp-for="@Model.City" value="@Model.City" />
                    <input type="hidden" asp-for="@Model.State" value="@Model.State" />
                    <input type="hidden" asp-for="@Model.PhoneNumber" value="@Model.PhoneNumber" />
                    <button asp-for="OrderFinalize" asp-action="FinalizeOrder" asp-controller="Order" type="submit" class="btn btn-success btn-lg btn-block">
                        Pay Now   <span class="glyphicon glyphicon-chevron-right"></span>
                    </button>
                </div>
            </div>
        </div>
        </form>
</div>