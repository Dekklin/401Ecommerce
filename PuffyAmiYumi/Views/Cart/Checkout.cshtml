@model PuffyAmiYumi.Models.Cart

@{
    Layout = "_Layout";
}



<h1>Finalize Your Cart!</h1>
<section>
    <div>
        <div>
            @foreach (CartItem item in Model.CartItems)
            {
                <div>
                    <h4>@item.ProductName</h4>
                    <p>@item.Price</p>
                    <br />
                </div>

            }
        </div>
    </div>
    <div class="card-img-overlay checkout">
        <form class="card-form" asp-controller="Cart" asp-action="ConfirmCheckout">
            <h4 class="card-text"> Shipping Address </h4>
            <input type="text" placeholder="Full Name" name="Full Name" />
            <input type="text" placeholder="Street Address" name="StreetAddress" />
            <input type="text" placeholder="City" name="City" />
            <input type="text" placeholder="State" name="State" />
            <input type="text" placeholder="Zip Code" name="Zip" />
            <br /><button type="submit" class="btn btn-outline-primary text-dark">Proceed With Checkout</button>
        </form>
    </div>
</section>